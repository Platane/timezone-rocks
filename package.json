{
  "name": "timezone-rocks",
  "author": {
    "name": "platane"
  },
  "version": "0.0.1",
  "private": true,
  "devDependencies": {
    "@sucrase/jest-plugin": "3.0.0",
    "@types/node": "18.11.9",
    "@types/jest": "29.2.3",
    "jest-transform-stub": "2.0.0",
    "jest": "29.3.1",
    "prettier": "2.8.0",
    "sucrase": "3.29.0",
    "typescript": "4.9.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "\\.(ts|tsx)$": "@sucrase/jest-plugin",
      "\\.(csv)$": "jest-transform-stub"
    }
  },
  "scripts": {
    "type": "tsc --noEmit",
    "lint": "prettier -c '**/*.{ts,tsx,json,md,html}' '!**/{dist,dist-info}/**'",
    "test": "jest",
    "build:locations": "( cd packages/location-index-builder ; pnpm build )",
    "dev": "( cd packages/app-builder ; pnpm dev )",
    "build:app": "( cd packages/app-builder ; pnpm build )"
  }
}
