{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "javascript": {
    "formatter": {
      "trailingCommas": "es5"
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "rules": {
      "style": {
        "useTemplate": "off",
        "noNonNullAssertion": "off",
        "noUselessElse": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "off"
      }
    }
  },
  "files": {
    "ignore": ["dist", "dist-info"]
  }
}
